    <script>
        // Leaderboard voting system with localStorage
        let artists = [
            { id: 1, name: 'Irwandi', votes: 900 },
            { id: 2, name: 'Alfaren', votes: 800 },
            { id: 3, name: 'Radit', votes: 700 },
            { id: 4, name: 'Gunawan', votes: 500 },
            { id: 5, name: 'rate web', votes: 1000 }
        ];

        function loadVotes() {
            artists.forEach(artist => {
                let storedVotes = localStorage.getItem(`votes_${artist.id}`);
                if (storedVotes !== null) {
                    artist.votes = parseInt(storedVotes);
                }
                // Tambah 2 setiap kali halaman dibuka
                artist.votes += 2;
                localStorage.setItem(`votes_${artist.id}`, artist.votes);
            });
            renderLeaderboard();
        }

        function renderLeaderboard() {
            // Sort berdasarkan votes descending
            artists.sort((a, b) => b.votes - a.votes);
            const leaderboard = document.getElementById('leaderboard');
            leaderboard.innerHTML = '';
            artists.forEach((artist, index) => {
                const li = document.createElement('li');
                li.innerHTML = `
                    <span class="rank">#${index + 1}</span>
                    <span class="name">${artist.name}</span>
                    <span class="votes">${artist.votes} Votes</span>
                    <button onclick="vote(${artist.id})">Vote</button>
                `;
                leaderboard.appendChild(li);
            });
        }

        function vote(id) {
            const artist = artists.find(a => a.id === id);
            if (artist) {
                artist.votes += 1;
                localStorage.setItem(`votes_${id}`, artist.votes);
                renderLeaderboard();
            }
        }

        // Load votes saat halaman load
        window.addEventListener('load', loadVotes);
    </script>
